<h1> Posts Show Page</h1>
<div class='post-card'>
  <h3><%= @post.title %></h3>
  <p><%= @post.text %></p>
  <div>
    <span>Comments: <%= @post.comments_counter %></span>
    <span>Likes: <%= @post.likes_counter %></span>
  </div>
  <div class="comment">
    <% @post.comments.each do |comment| %>
      <p><%= comment.text %></p>
    <% end %>
  </div>
</div>
<%= form_with url: "/users/#{@post.user_id}/posts/#{@post.id}/like_post" do |f| %>
  <%= f.submit "Like" %>
<% end %>
<h1 class="comment-here">Comment here....</h1>
<%= form_with url: new_comment_user_post_path do |form| %>
  <div class="mb-3">
    <%= form.text_area :text, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
